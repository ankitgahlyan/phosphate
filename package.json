{
    "private": true,
    "scripts": {
        "build": "tact --config ./tact.config.json --project Root",
        "build:wallet": "tact --config ./tact.config.json --project Wallet",
        "lint": "tact-fmt --write ./src/contracts/shard",
        "lint:misti": "yarn lint && yarn misti ./tact.config.json",
        "lint:es": "eslint . --fix",
        "test": "yarn build && jest src/tests/base -t 'Shard Jetton' && jest src/tests/shard",
        "test:only": "jest src/tests/base -t 'Shard Jetton' && jest src/tests/shard",
        "test:only:shard": "jest src/tests/shard",
        "deploy": "tact --config ./tact.config.json --project Root && ts-node ./src/scripts/deploy.ts",
        "deploy:only": "ts-node ./src/scripts/deploy.ts",
        "UPGRADE:only": "tsx ./src/scripts/upgrade.ts",
        "update": "yarn build && ts-node ./src/scripts/upgrade.ts",
        "update:wallet": "yarn build:wallet && ts-node ./src/scripts/upgrade.ts",
        "update:only": "ts-node ./src/scripts/upgrade.ts",
        "read": "ts-node ./src/scripts/contract.read.ts",
        "verify": "jest src/e2e-tests/shard-verify-deployment.spec.ts",
        "fmt": "yarn prettier -l -w .",
        "fmt:check": "yarn prettier --check .",
        "fmt:tact": "tact-fmt --write ./src",
        "spell": "cspell \"**/*.{ts,js,json,md,yml,tact}\"",
        "spell:check": "cspell --no-progress \"**/*.{ts,js,json,md,yml}\"",
        "bench": "yarn build && cross-env PRINT_TABLE=true ts-node ./src/benchmarks/benchmarks.ts",
        "bench:ci": "yarn build && cross-env PRINT_TABLE=false ts-node ./src/benchmarks/benchmarks.ts",
        "bench:add": "yarn build && cross-env UPDATE=false ts-node ./src/benchmarks/update.build.ts",
        "bench:update": "yarn build && cross-env UPDATE=true ts-node ./src/benchmarks/update.build.ts",
        "deduplicate": "yarn-deduplicate --list --fail",
        "prepare": "husky"
    },
    "dependencies": {
        "@aws-crypto/sha256-js": "^5.2.0",
        "@nowarp/misti": "0.9.0",
        "@orbs-network/ton-access": "^2.3.3",
        "@tact-lang/compiler": "1.6.13",
        "@tact-lang/deployer": "^0.2.0",
        "@tact-lang/ton-abi": "^0.0.3",
        "@tact-lang/ton-jest": "^0.0.4",
        "@ton/core": "^0.62.0",
        "@ton/crypto": "^3.3.0",
        "@ton/sandbox": "^0.38.0",
        "@ton/test-utils": "^0.12.0",
        "@ton/ton": "^16.1.0",
        "@tondevwallet/traces": "^0.1.8",
        "@types/jest": "^30.0.0",
        "@types/node": "^24.10.1",
        "@types/qs": "^6.14.0",
        "base64url": "^3.0.1",
        "chalk": "5.6.2",
        "cli-table3": "^0.6.5",
        "cross-env": "^10.1.0",
        "dotenv": "^17.2.3",
        "jest": "^30.2.0",
        "qs": "^6.14.0",
        "ton-sandbox-dev": "0.35.46",
        "ts-jest": "^29.4.6",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.3",
        "yarn-deduplicate": "^6.0.2"
    },
    "packageManager": "yarn@4.12.0",
    "devDependencies": {
        "@ton-community/func-js": "^0.10.0",
        "@ton/blueprint": "^0.41.0",
        "@ton/tolk-js": "^1.2.0",
        "@typescript-eslint/eslint-plugin": "^8.48.1",
        "@typescript-eslint/parser": "^8.48.1",
        "cspell": "^9.4.0",
        "depcheck": "^1.4.7",
        "eslint": "^9.39.1",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "eslint-plugin-unicorn": "^61.0.2",
        "eslint-plugin-unused-imports": "^4.3.0",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.7",
        "prettier": "^3.7.4",
        "tsx": "^4.21.0"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "prettier --write"
        ]
    }
}
